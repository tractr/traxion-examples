generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator traxion {
  provider         = "traxion-prisma-generator"
  output           = "../src/generated"
  tsConfigFilePath  = "../../tsconfig.json"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  roles       String   @default("role")
  profile      Profile?
  tasks       Task[]   @relation("TaskToAuthor")
  sharedTasks Task[]   @relation("TaskToUser")
}

model Profile {
  id        Int     @id @default(autoincrement())
  firstName  String
  lastName  String
  bio       String?
  user      User    @relation(fields: [userId], references: [id])
  userId    Int     @unique
}

model Task {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  status      String  @default("draft")
  author      User    @relation("TaskToAuthor", fields: [authorId], references: [id])
  authorId    Int
  sharedWith  User[]  @relation("TaskToUser")
}